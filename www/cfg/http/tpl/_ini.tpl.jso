
   ({'text/html':
   [
   // head
   // -----------------------------------------------------------------------------------
      {head:
      [
      // essentials :: mobile first, favicon
      // --------------------------------------------------------------------------------
         {meta:'', charset:'utf-8'},
         {meta:'', http-equiv:'X-UA-Compatible', content:'IE=edge'},
         {meta:'', name:'viewport', content:'width=device-width, initial-scale=1'},
         {meta:'', name:'viewport', content:'width=device-width, initial-scale=1'},

         {link:'', rel:'icon', href:'favicon.ico', type:'image/x-icon'},
      // --------------------------------------------------------------------------------


      // style :: root
      // --------------------------------------------------------------------------------
         {style:'cfg/site/css/_root.css.jso'},
      // --------------------------------------------------------------------------------

      // style :: auto load site styles
      // --------------------------------------------------------------------------------
         while
         ({
            in: import ('cfg/site/css/');
            if: (item.name != '_*');
            do: yield ({style:('cfg/site/css/' + item.base)});
         }),
      // --------------------------------------------------------------------------------


      // script :: root
      // --------------------------------------------------------------------------------
         {script:'cfg/site/jsf/_root.utl.js'},
      // --------------------------------------------------------------------------------

      // script :: auto load site scripts
      // --------------------------------------------------------------------------------
         while
         ({
            in: import ('cfg/site/jsf/');
            if: (item.name != '_*');
            do: yield ({script:('cfg/site/jsf/' + item.base)});
         }),
      // --------------------------------------------------------------------------------


      // inc :: add icludes that belong in head
      // --------------------------------------------------------------------------------
         while
         ({
            in: import ('cfg/site/inc/');
            as: {tag:( ((item.base == '*.css.*') ? 'style') : ((item.base == '*.js') ? 'script') : null )};
            if: ((tag != null) && (item.base != '*.htm.*'));
            do: yield ({(tag):('cfg/site/inc/' + item.base)});
         }),
      // --------------------------------------------------------------------------------
      ]},
   // -----------------------------------------------------------------------------------



   // body
   // -----------------------------------------------------------------------------------
      {body:[]}
   // -----------------------------------------------------------------------------------
   ]})
