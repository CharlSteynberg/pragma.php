
   ({'text/css':
   [
   // base em size
   // -----------------------------------------------------------------
      with
      ({
         basis:for(fnt=10, rsl=320; fnt<29; fnt++, rsl+=160),
         yield:
         {
            ('@media all and (orientation: landscape) and (min-width: '+rsl+'px)'):
            {
               body:
               {font-size:(fnt+'px')}
            },

            ('@media all and (orientation: portrait) and (min-height: '+rsl+'px)'):
            {
               body:
               {font-size:(fnt+'px')}
            }
         }
      }),
   // -----------------------------------------------------------------



   // spacing
   // -----------------------------------------------------------------
      with
      ({
         basis: for(bs=-1; bs<25;  bs++);

         adapt:
         {
            cn:((bs < 0) ? '05' : bs);
            fs:((bs < 0) ? '0.5em !important' : ((bs * 0.7) + 'em !important'));
         };

         yield:
         [
         // size
         // -----------------------------------------------------------
            {('.size-fnt-'+cn):{font-size:(fs); line-height:1}},
            {('.size-all-'+cn):{width:(fs); height:(fs);}},
            {('.size-hrz-'+cn):{width:(fs)}},
            {('.size-vrt-'+cn):{height:(fs)}},
         // -----------------------------------------------------------

         // margin
         // -----------------------------------------------------------
            {('.mrgn-all-'+cn):{margin:(fs)}},
            {('.mrgn-hrz-'+cn):{margin-left:(fs), margin-right:(fs)}},
            {('.mrgn-vrt-'+cn):{margin-top:(fs), margin-bottom:(fs)}},
            {('.mrgn-top-'+cn):{margin-top:(fs)}},
            {('.mrgn-btm-'+cn):{margin-bottom:(fs)}},
            {('.mrgn-lft-'+cn):{margin-left:(fs)}},
            {('.mrgn-rgt-'+cn):{margin-right:(fs)}},
         // -----------------------------------------------------------

         // padding
         // -----------------------------------------------------------
            {('.padn-all-'+cn):{padding:(fs)}},
            {('.padn-hrz-'+cn):{padding-left:(fs), padding-right:(fs)}},
            {('.padn-vrt-'+cn):{padding-top:(fs), padding-bottom:(fs)}},
            {('.padn-top-'+cn):{padding-top:(fs)}},
            {('.padn-btm-'+cn):{padding-bottom:(fs)}},
            {('.padn-lft-'+cn):{padding-left:(fs)}},
            {('.padn-rgt-'+cn):{padding-right:(fs)}},
         // -----------------------------------------------------------
         ]
      }),
   // -----------------------------------------------------------------


   // span %
   // -----------------------------------------------------------------
      with
      ({
         basis: for(spn=0;  spn<25;  spn++);
         adapt: {num:(spn), prc:(spn * 4.1666666666667 + '% !important')};
         yield:
         [
            {('.span-all-'+num):{width:(prc), height:(prc)}},
            {('.span-hrz-'+num):{width:(prc)}},
            {('.span-vrt-'+num):{height:(prc)}},
         ]
      }),
   // -----------------------------------------------------------------


   // grid :: table, row, col
   // -----------------------------------------------------------------
      {tbody:
      {
         border-spacing:0px;
         padding:0px;
      }},

      {'.grid':
      {
         border-spacing:0px;
         border-collapse:collapse;
      }},

      {'.row':
      {
         padding:0px;
      }},

      {'.col':
      {
         text-align:left;
         vertical-align:top;
         padding:0px;
      }},
   // -----------------------------------------------------------------


   // alignment
   // -----------------------------------------------------------------
      {'.text-cnt':{text-align:'center !important'}},
      {'.text-mdl':{vertical-align:'middle !important'}},
      {'.text-top':{vertical-align:'top !important'}},
      {'.text-btm':{vertical-align:'bottom !important'}},
      {'.text-lft':{text-align:'left !important'}},
      {'.text-rgt':{text-align:'right !important'}},

      {'.pull-cnt':{margin:auto}},
      {'.pull-lft':{float:left}},
      {'.pull-rgt':{float:right}},
   // -----------------------------------------------------------------


   // own-line
   // -----------------------------------------------------------------
      {'.wrap':{display:'block'}},
   // -----------------------------------------------------------------


   // hidden
   // -----------------------------------------------------------------
      {'.hide':{display:none}},
   // -----------------------------------------------------------------


   // visible
   // -----------------------------------------------------------------
      {'.show':{display:initial}},
   // -----------------------------------------------------------------


   // in-line
   // -----------------------------------------------------------------
      {'.flow':{float:left}},
   // -----------------------------------------------------------------


   // crop: no overflow
   // -----------------------------------------------------
      {'.crop':{overflow:hidden}},
   // -----------------------------------------------------


   // click: interactive
   // -----------------------------------------------------
      {'.click':{cursor:pointer}},
   // -----------------------------------------------------
   ]})
