
   ({'text/html':
   [
   // head :: settings area
   // -----------------------------------------------------------------------------------
      {head:
      [
      // essentials :: mobile first, favicon, title
      // --------------------------------------------------------------------------------
         {meta:'', charset:'utf-8'},
         {meta:'', http-equiv:'X-UA-Compatible', content:'IE=edge'},
         {meta:'', name:'viewport', content:'width=device-width, initial-scale=1'},
         {meta:'', name:'viewport', content:'width=device-width, initial-scale=1'},

         {link:'', rel:'icon', href:'favicon.ico', type:'image/x-icon'},

         {title:'pragma.php'},
      // --------------------------------------------------------------------------------


      // style :: auto load gui boot styles from pub/css/boot dir
      // --------------------------------------------------------------------------------
         with
         ({
            basis:'/css/boot/';
            yield:{style:('#css-' + key - '.jsam'), src:('/css/boot/' + key)};
         }),
      // --------------------------------------------------------------------------------


      // basis style
      // --------------------------------------------------------------------------------
         {style:'', 'text/css':
         {
            '#basis':
            {
               width:100%;
               height:100%;
            }
         }},
      // --------------------------------------------------------------------------------


      // script :: auto load gui boot scripts from pub/lib/boot dir
      // --------------------------------------------------------------------------------
         with
         ({
            basis:'/lib/boot/';
            fetch:{key:file};
            yield:{script:('/lib/boot/' + file)};
         }),
      // --------------------------------------------------------------------------------


      // preServe :: add boot apps head parts
      // --------------------------------------------------------------------------------
         with
         ({
            basis:'cfg/server/_init.json';
            fetch:{key:nme, value:list};
            where:(nme == 'preServe');
            yield:with
            ({
               basis:(list);
               fetch:{value:app};
               yield:with
               ({
                  basis:('cfg/'+app+'/boot.jsam');
                  where:(key == 'head');
                  yield:(value);
               })
            })
         })
      // --------------------------------------------------------------------------------
      ]},
   // -----------------------------------------------------------------------------------



   // stage :: visible area
   // -----------------------------------------------------------------------------------
      {body:
      [
      // preServe :: add boot apps body parts
      // --------------------------------------------------------------------------------
         with
         ({
            basis:'cfg/server/_init.json';
            fetch:{key:nme, value:list};
            where:(nme == 'preServe');
            yield:with
            ({
               basis:(list);
               fetch:{value:app};
               yield:with
               ({
                  basis:('cfg/'+app+'/boot.jsam');
                  where:(key == 'body');
                  yield:(value);
               })
            })
         }),
      // --------------------------------------------------------------------------------


      // noscript :: notice-fail if javascript is disabled
      // --------------------------------------------------------------------------------
         {noscript:
         [
            {div:'.page', src:
            [
               {note:'fail', src:
               `  <b>JavaScript is required.</b><br>
                  Please enable Javascript and hit refresh.
               `}
            ]}
         ]},
      // --------------------------------------------------------------------------------


      // layout
      // --------------------------------------------------------------------------------
         {grid:'#basis', src:
         [

         // top row
         // -----------------------------------------------------------------------------
            {row:
            [
               {col:'#zone-top .span-hrz-24 .span-vrt-0', colspan:3, src:''}
            ]},
         // -----------------------------------------------------------------------------

         // mdl row
         // -----------------------------------------------------------------------------
            {row:
            [
               {col:'#zone-lft .span-hrz-3  .span-vrt-24', src:''},
               {col:'#zone-mdl .span-hrz-18 .span-vrt-24 .padn-all-2', src:(reqPth)},
               {col:'#zone-rgt .span-hrz-3  .span-vrt-24', src:''},
            ]},
         // -----------------------------------------------------------------------------

         // btm row
         // -----------------------------------------------------------------------------
            {row:
            [
               {col:'#zone-btm .span-hrz-24 .span-vrt-0', colspan:3, src:''}
            ]},
         // -----------------------------------------------------------------------------
         ]}
      // --------------------------------------------------------------------------------

      ]}
   // -----------------------------------------------------------------------------------
   ]});
